extends base

block content 
    img(src="/" + loggedInUser.avatarUrl, width="100", heigth="100")
    form(method="POST", enctype="multipart/form-data")
        label(for="avatar") Avatar 
        input(type="file", name="avatar", id="avatar", accept="image/*")
        input(type="text", name="name", placeholder="Name", value=loggedInUser.name)
        input(type="text", name="email", placeholder="Email", value=loggedInUser.email)
        input(type="text", name="username", placeholder="Username", value=loggedInUser.username)
        input(type="text", name="location", placeholder="Location", value=loggedInUser.location)
        input(type="submit", value="Update profile")