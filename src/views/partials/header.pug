            img(src=loggedInUser.avatarUrl, width=100, heigth=100)
        else
            img(src="/" + loggedInUser.avatarUrl, width=100, heigth=100)
    nav
        ul
            li 
                a(href="/search") 
                    i.fa-solid.fa-magnifying-glass
            li
                a(href="/") Home
            li 
                a(href=`/users/6565858b38cd3462afa8b7b4`) admin profile
            if loggedIn
                li 
                    a(href="/users/edit-profile") My profile                        
                li 
                    a(href="/videos/upload") Upload Video
